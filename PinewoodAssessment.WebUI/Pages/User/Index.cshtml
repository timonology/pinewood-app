@page
@model PinewoodAssessment.WebUI.Pages.User.IndexModel
@{
}

<h1>Users</h1>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.userModel)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-info" href="@Url.Action("Edit", new { id = user.Id })">Edit</a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = user.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>